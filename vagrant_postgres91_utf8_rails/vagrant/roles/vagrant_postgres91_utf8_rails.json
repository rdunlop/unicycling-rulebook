{
    "name": "vagrant_postgres91_utf8_rails",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "default_attributes": {
    },
    "override_attributes": {
      "postgresql": {
            "listen_addresses": "*",
            "ssl": false,
            "password": {
                "postgres": "password"
            }
        }  
    },
    "description": "Ready to use Postgres9.1 (UTF8) Ruby-on-Rails VM",
    "comment": [ "recipe[postgresql::server]",
        "recipe[postgresql::server_debian]" ],
    "run_list": [
        "recipe[apt]",
        "recipe[build-essential]",

        "recipe[postgresql::server]",
        "recipe[postgresql::server_debian]",
        "recipe[workstation::locale]",

        "recipe[workstation::default]",
        "recipe[workstation::vim]",
        "recipe[workstation::git]",
        "recipe[workstation::ruby]",
        "recipe[workstation::bundler]",
        "recipe[workstation::bundle_install]",
        "recipe[workstation::db]"
    ]
}
