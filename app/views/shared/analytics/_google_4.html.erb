<% if Rails.application.secrets.google_analytics_4_tracking_id.present? %>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= Rails.application.secrets.google_analytics_4_tracking_id %>"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '<%= Rails.application.secrets.google_analytics_4_tracking_id %>');
  </script>
<% end %>
