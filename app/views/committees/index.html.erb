<h1>Listing committees</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Preliminary Committee?</th>
    <th>Committee Members</th>
    <th></th>
    <th></th>
  </tr>

<% @committees.each do |committee| %>
  <tr>
    <td><%= committee.name %></td>
    <td><%= committee.preliminary ? 'yes' : 'no' %></td>
    <td>
    <% if can? :read, committee %>
        <%= link_to('Show Members', committee_committee_members_path(committee)) %>
    <% end %>
    </td>
    <td>
    <% if can? :edit, committee %>
        <%= link_to 'Edit', edit_committee_path(committee) %>
    <% end %>
    </td>
    <td>
    <% if can? :destroy, committee %>
        <%= link_to 'Destroy', committee, confirm: 'Are you sure?', method: :delete %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, Committee %>
   <%= link_to 'New Committee', new_committee_path %>
<% end %>
