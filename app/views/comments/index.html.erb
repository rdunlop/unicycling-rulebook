<h1>Listing comments</h1>

<table>
  <tr>
    <th>Proposal</th>
    <th>User</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.proposal_id %></td>
    <td><%= comment.user_id %></td>
    <td><%= comment.comment %></td>
    <td><%= link_to 'Show', [@proposal, comment] %></td>
    <td><%= link_to 'Edit', edit_proposal_comment_path(@proposal, comment) %></td>
    <td><%= link_to 'Destroy', [@proposal, comment], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

