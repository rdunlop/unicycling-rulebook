<h1>The following proposals passed:</h1>

<% @proposals.each do |proposal| %>
    <hr />
    <h2>Proposal <%= proposal.id %>: <%= proposal.to_s %></h2>
    <h3>Vote Summary:</h3>
    <% if proposal.vote_end_date %>
    Passed on <%= proposal.vote_end_date.to_date.to_s(:long) %><br />
    <% end %>
    <%= render :partial => "/proposals/vote_summary", :object => proposal %>
    <%= render :partial => "/proposals/proposal_details", :locals => {:proposal => proposal, :revision => proposal.latest_revision } %>
<% end %>
