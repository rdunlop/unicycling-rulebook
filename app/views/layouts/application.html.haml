!!!
%html
  %head
    %title Rulebook
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .top_nav
      %h1 Rulebook
    .left_nav
      %ul
        %li= link_to('Home', welcome_index_path)
        - if can? :create, Proposal
          %li= link_to('Submit Proposal', new_proposal_path)
        %li= link_to('FAQ', welcome_help_path)
        - if can? :membership, Committee
          %li= link_to('Members', membership_committees_path)
        - if can? :passed, Proposal
          %li= link_to('View Approved Proposals', passed_proposals_path)
        - if can? :read, Committee
          %li= link_to('Committees (Admin Pages)', committees_path)
        - if can? :manage, AppConfig
          %li= link_to('App Config (Admin Pages)', app_configs_path)
        - if can? :send, Message
          %li= link_to('Send E-mail Messages', welcome_message_path)
        - if user_signed_in?
          %li= link_to('Account Settings', edit_user_registration_path)
          %li= link_to('Logout', destroy_user_session_path, :method => :delete)
        - if not user_signed_in?
          %li= link_to('Login', new_user_session_path)
          %li= link_to('Sign-Up', new_user_registration_path)
    .main_nav
      %p#notice= notice
      %p.alert= alert
      = yield
      %hr
      - if @config.nil? or @config.copyright.blank?
        %p
          Copyright &copy; 2012 International Unicycling Federation
          %br
      - else
        %p
          Copyright &copy; #{@config.copyright}
          %br
      = debug(params) if Rails.env.development?
